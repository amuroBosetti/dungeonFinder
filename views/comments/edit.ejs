<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 style="text-align:center;">Edit your comment</h1>
        </div>
    </div>
    <div class="row">
        <div style="width: 30%; margin: 20px auto;">
            <form action="/dungeons/<%= dungeon_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control"type="text" name="comment[text]" value="<%= comment.text%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/dungeons">Go back</a>
        </div>
    </div>

</div>


<% include ../partials/footer %>

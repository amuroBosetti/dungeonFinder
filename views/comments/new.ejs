<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 style="text-align:center;">Make a comment to <%= dungeon.name %>!</h1>
        </div>
    </div>
    <div class="row">
        <div style="width: 30%; margin: 20px auto;">
            <form action="/dungeons/<%= dungeon._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control"type="text" name="comment[text]" placeholder="Text">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/dungeons">Go back</a>
        </div>
    </div>

</div>

<% include ../partials/footer %>
